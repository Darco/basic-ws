<assembly>
  <id>client</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/classes/${packageInPathFormat}</directory>
      <outputDirectory>${packageInPathFormat}</outputDirectory>
      <includes>
        <include>model/**/**.class</include>
        <include>utils/**.class</include>
      </includes>
    </fileSet>
    <!--  Estos fileset's incluyen todo lo que se autogenero con jaxws -->
    <fileSet>
      <directory>target/classes/${domainPackagePathFormat}</directory>
      <outputDirectory>${domainPackagePathFormat}</outputDirectory>
      <includes>
        <include>**/**.class</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/classes/org/w3/_2001/xmlschema</directory>
      <outputDirectory>org/w3/_2001/xmlschema</outputDirectory>
      <includes>
        <include>**/**.class</include>
      </includes>
    </fileSet>
    <!--  OTRO MAS PARA LA META-INF -->
    <fileSet>
      <directory>target/classes/META-INF</directory>
      <outputDirectory>META-INF</outputDirectory>
      <includes>
        <include>**/**.*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>